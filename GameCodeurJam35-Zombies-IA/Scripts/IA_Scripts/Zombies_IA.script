function setSprite(pSpriteID)
	for n=1, 3 do
		if n == pSpriteID then
			msg.post("#sprite_"..n , "enable")
		else
			msg.post("#sprite_"..n , "disable")
		end
	end
end

function init(self)
	self.type = math.random(1, 3)
	setSprite(self.type)
	msg.post("#Target", "test")
end

